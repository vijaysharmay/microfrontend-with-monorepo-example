{
  "name": "hr",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/apps/hr"
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "hr:build",
        "port": 4201
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite preview --port=4201 --strictPort --base=/",
        "cwd": "dist/apps/hr"
      },
      "dependsOn": ["build"]
    }
  }
}
