{
  "name": "shell",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/apps/shell"
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "shell:build",
        "port": 4200
      },
      "configurations": {
        "development": {
          "devRemotes": ["hr", "finance"]
        }
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite preview --port=4200 --strictPort --base=/"
      },
      "dependsOn": ["build"]
    },
    "dev:all": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": true,
        "commands": [
          "nx preview hr --port=4201",
          "nx preview finance --port=4202",
          "nx preview shell --port=4200"
        ]
      }
    }
  }
}
