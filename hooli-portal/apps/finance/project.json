{
  "name": "finance",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/apps/finance"
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "finance:build",
        "port": 4202
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite preview --port=4202 --strictPort --base=/",
        "cwd": "dist/apps/finance"
      },
      "dependsOn": ["build"]
    }
  }
}
